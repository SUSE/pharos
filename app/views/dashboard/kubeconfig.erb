apiVersion: v1
kind: Config
clusters:
- name: local
  cluster:
    server: https://<%= @apiserver_host %>:6443
    certificate-authority-data: <%= Base64.strict_encode64 @ca_crt %>
users:
- name: <%= current_user.email %>
  user:
contexts:
- context:
    cluster: local
    user: <%= current_user.email %>